            <a href="<?= $block->escapeUrl($adminDashboardUrl) ?>" style="color: #ccc; text-decoration: none; height: 32px; padding: 0 8px; display: inline-block;">
                <?= $block->escapeHtml(__('Magento Admin')) ?>
            </a>
        </div>
        
        <?php if ($editUrl): ?>
        <div class="flux-adminbar-edit" style="margin-left: auto;">
            <a href="<?= $block->escapeUrl($editUrl) ?>" style="color: #ccc; text-decoration: none; height: 32px; padding: 0 8px; display: inline-block;">
                <?= $block->escapeHtml($contextLabel) ?>
            </a>
        </div>
        <?php endif; ?>
        
        <?php if ($isDebug): ?>
        <div class="flux-adminbar-debug" style="background-color: #f44336; color: white; padding: 0 8px;">
            <?= $block->escapeHtml(__('DEBUG MODE')) ?>
        </div>
        <?php endif; ?>
    </div>
