            </a>
        </div>
        
        <?php if ($editUrl): ?>
        <div class="flux-adminbar-edit">
            <a href="<?= $block->escapeUrl($editUrl) ?>">
                <?= $block->escapeHtml($contextLabel) ?>
            </a>
        </div>
        <?php endif; ?>
        
